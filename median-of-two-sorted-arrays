lst1 = [1,3]
lst2 = [2,7,1]

def findMedianSortedArrays(nums1, nums2):
    """
    :type nums1: List[int]
    :type nums2: List[int]
    :rtype: float
    """
    merged_list = sorted(nums1 + nums2)
    if len(merged_list) % 2 == 0:
        return (merged_list[int(len(merged_list) / 2) -1] + merged_list[int(len(merged_list) / 2)])/ 2
    else:
        return merged_list[int(len(merged_list) / 2)]
   

print(findMedianSortedArrays(lst1, lst2))